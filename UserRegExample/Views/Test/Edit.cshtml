@model UserRegExample.ViewModels.ManageUserRoles

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ManageUserRoles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="@Model.AppUser.Id" />
                <label asp-for="@Model.AppUser.Email">@Model.AppUser.Email</label>
            </div>

            <div class="form-group">
                @for (int i = 0; i < Model.roles.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.roles[i].Value" />
                    <input asp-for="@Model.roles[i].Selected" />@Model.roles[i].Text
                }
            </div>

            <div class="form-group">
                @for (int i = 0; i < Model.ApplicationClaims.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.ApplicationClaims[i].Value" />
                    <input asp-for="@Model.ApplicationClaims[i].Selected" />@Model.ApplicationClaims[i].Text
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
